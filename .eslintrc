{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "rules": {
    "semi": "error",
    "prefer-spread": "warn",
    "comma-dangle": [ "warn", "always-multiline" ],
    "no-undef": "error",
    "prefer-const": "warn",
    "one-var": [ "warn", "never" ],
    "no-unused-vars": "warn",
    "quote-props": [ "warn", "as-needed" ],
    "quotes": [ "warn", "single" ],
    "prefer-template": "warn",
    "template-curly-spacing": [ "error", "never" ],
    "no-new-wrappers": "error",
    "radix": "error",
    "no-return-await": "warn",
    "import/first": "warn",
    "import/extensions": "warn",
    "import/no-unresolved": "error",
    "import/no-absolute-path": "error",
    "import/no-duplicates": "error",
    "no-console": [
      "warn",
      { "allow": ["warn", "error"] }
    ]
  },
  "plugins": [
    "import"
  ],
  "globals": {
    "process": true
  }
}
